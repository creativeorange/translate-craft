{% import "_includes/forms" as forms %}

{{ forms.autosuggestField({
    label: 'Google Translate Key',
    instructions: 'Either the API key or the project ID, when using the project ID turn off the switch below.',
    id: 'googleTranslateKey',
    name: 'googleTranslateKey',
    value: settings['googleTranslateKey'],
    required: true,
    suggestEnvVars: true})
}}

{{ forms.textField({
    type: 'number',
    label: 'Cache timer',
    instructions: 'How many seconds does the cache timer need to exist.',
    id: 'cacheTime',
    name: 'cacheTime',
    value: settings['cacheTime'],
    required: true})
}}

{{ forms.autosuggestField({
    label: "Credentials Path",
    instructions: "The path to the credentials file. Only needed when not using an API key",
    id: 'path',
    class: 'ltr',
    name: 'path',
    suggestEnvVars: true,
    suggestAliases: true,
    value: settings['path'],
    placeholder: "/path/to/folder"
}) }}


{{ forms.lightswitchField({
    label: 'Use API key',
    id: 'useApiKey',
    name: 'useApiKey',
    on: settings['useApiKey']})
}}

{{ forms.editableTableField({
    label: "Excluded words",
    instructions: 'Enter words that should not be translated here. They will be excluded from translating.',
    id : 'excludedWords',
    name : 'excludedWords',
    cols : {
        'word' : {
            'heading' : 'Word',
            'type' : 'singleline'
        },
        'enabled' : {
            'heading' : 'Enabled',
            'type' : 'checkbox'
        }
    },
    rows: settings.excludedWords,
    addRowLabel: 'Add excluded word'})
}}